{
    "name": "xerces-c",
    "version": "3.2.4",
    "description": "Validating XML parser",
    "homepage": "https://xerces.apache.org/xerces-c/",
    "dependencies":
    [
        {
            "name": "vcpkg-cmake",
            "host": true
        },
        {
            "name": "vcpkg-cmake-config",
            "host": true
        }
    ],
    "features":
    {
        "network":
        {
            "description": "Enable network support"
        },
        "transcoder-iconv":
        {
            "description": "Transcoder will be using iconv",
            "dependencies":
            [
                "iconv"
            ]
        },
        "transcoder-icu":
        {
            "description": "Transcoder will be using ICU",
            "dependencies":
            [
                "icu"
            ]
        },
        "xmlch-wchar":
        {
            "description": "XMLCh type will use wchar_t"
        }
    }
}
