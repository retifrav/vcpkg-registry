{
    "name": "draco",
    "version": "1.5.7",
    "description": "A library for compressing and decompressing 3D geometric meshes and point clouds",
    "homepage": "https://google.github.io/draco/",
    "dependencies":
    [
        {
            "name": "vcpkg-cmake",
            "host": true
        },
        {
            "name": "vcpkg-cmake-config",
            "host": true
        }
    ],
    "features":
    {
        "gltf-bitstream":
        {
            "description": "Limit Draco features to those included in the Draco glTF specification"
        },
        "tools":
        {
            "description": "Build tools"
        },
        "transcoder":
        {
            "description": "Enable transcoder",
            "dependencies":
            [
                "eigen",
                "ghc-filesystem",
                "tinygltf"
            ]
        },
        "wasm":
        {
            "description": "Enable WASM support"
        }
    }
}
