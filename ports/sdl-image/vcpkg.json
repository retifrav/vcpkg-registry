{
    "name": "sdl-image",
    "version": "2.8.8",
    "description": "Image decoding for SDL",
    "homepage": "https://github.com/libsdl-org/SDL_image",
    "license": "Zlib",
    "dependencies":
    [
        {
            "name": "vcpkg-cmake",
            "host": true
        },
        {
            "name": "vcpkg-cmake-config",
            "host": true
        },
        "png",
        "sdl"
    ],
    "features":
    {
        "jpeg":
        {
            "description": "Support for JPEG image format",
            "dependencies":
            [
                "jpeg-turbo"
            ]
        },
        "webp":
        {
            "description": "Support for WebP image format",
            "dependencies":
            [
                "webp"
            ]
        },
        "tiff":
        {
            "description": "Support for TIFF image format",
            "dependencies":
            [
                "tiff"
            ]
        }
    }
}
