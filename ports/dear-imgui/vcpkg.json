{
    "name": "dear-imgui",
    "version": "1.89.3",
    "description": "Bloat-free Graphical User interface for C++ with minimal dependencies",
    "homepage": "https://github.com/ocornut/imgui",
    "dependencies":
    [
        {
            "name": "vcpkg-cmake",
            "host": true
        },
        {
            "name": "vcpkg-cmake-config",
            "host": true
        },
        {
            "name": "decovar-vcpkg-cmake",
            "host": true
        }
    ],
    "features":
    {
        "backend-glfw-opengl":
        {
            "description": "Using GLFW with OpenGL",
            "dependencies":
            [
                "glfw"
            ]
        },
        "backend-glfw-vulkan":
        {
            "description": "Using GLFW with Vulkan",
            "dependencies":
            [
                {
                    "name": "glfw",
                    "features":
                    [
                        "vulkan-static"
                    ]
                }
            ]
        }
    }
}
