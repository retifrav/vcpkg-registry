{
    "name": "opencv",
    "version": "4.13.0",
    "description": "Open Source Computer Vision",
    "homepage": "https://opencv.org",
    "license": "Apache-2.0",
    "dependencies":
    [
        {
            "name": "vcpkg-cmake",
            "host": true
        },
        {
            "name": "vcpkg-cmake-config",
            "host": true
        },
        "zlib"
    ],
    "features":
    {
        "with-eigen":
        {
            "description": "Enable Eigen support",
            "dependencies":
            [
                "eigen"
            ]
        },
        "with-jpeg":
        {
            "description": "Enable JPEG support",
            "dependencies":
            [
                "jpeg-turbo"
            ]
        },
        "with-png":
        {
            "description": "Enable PNG support",
            "dependencies":
            [
                "png"
            ]
        },
        "with-tiff":
        {
            "description": "Enable TIFF support",
            "dependencies":
            [
                "tiff"
            ]
        },
        "with-webp":
        {
            "description": "Enable WebP support",
            "dependencies":
            [
                "webp"
            ]
        }
    }
}
