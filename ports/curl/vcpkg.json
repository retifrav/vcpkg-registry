{
    "name": "curl",
    "version": "8.18.0",
    "description": "Library for transferring data with URL syntax",
    "homepage": "https://curl.se/",
    "license": "curl AND ISC AND BSD-3-Clause",
    "dependencies":
    [
        {
            "name": "vcpkg-cmake",
            "host": true
        },
        {
            "name": "vcpkg-cmake-config",
            "host": true
        },
        {
            "name": "decovar-vcpkg-cmake",
            "host": true
        }
    ],
    "default-features":
    [
        "ssl",
        "zlib"
    ],
    "features":
    {
        "brotli":
        {
            "description": "Use brotli",
            "dependencies":
            [
                "brotli"
            ]
        },
        "openssl":
        {
            "description": "Enable OpenSSL backend (SSL support)",
            "dependencies":
            [
                "openssl"
            ]
        },
        "ssl":
        {
            "description": "Default SSL/TLS backend",
            "dependencies":
            [
                {
                    "$comment": "Defaults to Schannel on Windows, unless http3 is also enabled",
                    "name": "curl",
                    "default-features": false,
                    "features":
                    [
                        "sspi"
                    ],
                    "platform": "(windows & !uwp) | mingw"
                },
                {
                    "$comment": "Otherwise, defaults to OpenSSL",
                    "name": "curl",
                    "default-features": false,
                    "features":
                    [
                        "openssl"
                    ],
                    "platform": "(uwp | !windows) & !mingw"
                }
            ]
        },
        "ssls-export":
        {
            "description": "SSL session import/export",
            "dependencies":
            [
                {
                    "name": "curl",
                    "default-features": false,
                    "features":
                    [
                        "ssl"
                    ]
                }
            ]
        },
        "sspi":
        {
            "description": "Security Support Provider Interface (SSPI) support",
            "supports": "(windows & !uwp) | mingw"
        },
        "wolfssl":
        {
            "description": "SSL support (wolfSSL)",
            "dependencies":
            [
                "wolfssl"
            ]
        },
        "zlib":
        {
            "description": "Use zlib",
            "dependencies":
            [
                "zlib"
            ]
        },
        "zstd":
        {
            "description": "Use zstd",
            "dependencies":
            [
                "zstd"
            ]
        },
        "tool":
        {
            "description": "Build cURL CLI tool"
        }
    }
}
